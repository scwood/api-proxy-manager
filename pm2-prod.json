{
  "apps": [
    {
      "name": "node-starter",
      "script": "./src/server/bin/run.js",
      "exec_mode": "cluster",
      "instances": "max",
      "autorestart": true,
      "restart_delay": 0,
      "max_memory_restart": "120M",
      "max_restarts": 5,
      "min_uptime": 2000,
      "listen_timeout": 5000,
      "error_file": "/var/log/pm2-err.log",
      "out_file": "/var/log/pm2-access.log",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "vizion": false,
      "watch": false
    }
  ]
}

